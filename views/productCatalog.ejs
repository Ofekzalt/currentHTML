<div class="product-box">
    <div id="product-list">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <a href="/view-product/<%= product.id %>" class="product-link">
                    <div class="product" data-gender="<%= product.gender %>" data-color="<%= product.color %>">
                        <img src="<%= product.image %>" alt="<%= product.name %>">
                        <h3><%= product.name %></h3>
                        <p><%= product.caption %></p>
                        <p class="price"><%= product.price %>$</p>
                    </div>
                </a>
            <% }); %>
        <% } else { %>
            <p>No products available at the moment.</p>
        <% } %>
    </div>
</div>
