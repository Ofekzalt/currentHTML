<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- Other head elements -->
    <title><%= title %></title>
    <link rel="stylesheet" href="/orderHistory.css">
</head>
<body>
    <h1>YOUR JORDAN'S</h1>
    <div id="order-history">
        <h2>My order history</h2>
        <table id="orders-table">
            <thead>
                <tr>
                    <!-- Removed the date column header -->
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <% order.products.forEach(item => { %>
                            <tr>
                                <!-- Removed the date column data -->
                                <td><%= item.product.name %></td>
                                <td><%= item.quantity %></td>
                                <td><%= (item.product.price * item.quantity).toFixed(2) %> â‚ª</td>
                            </tr>
                        <% }) %>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="3">You have no orders.</td> <!-- Adjusted colspan -->
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
